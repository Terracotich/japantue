@model japantune.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            User
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.SurName)
        </dd>
        <dt class="col-sm-2">
            Material
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Material.Title)
        </dd>
        <dt class="col-sm-2">
            Payment
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Payment.PayMethod) (¥@Html.DisplayFor(model => model.Payment.Price))
        </dd>
        <dt class="col-sm-2">
            Review
        </dt>
        <dd class="col-sm-10">
            @if (Model.Review != null)
            {
                @Html.DisplayFor(model => model.Review.Title)
                <text>(Rating: @Html.DisplayFor(model => model.Review.Rating))</text>
            }
            else
            {
                <span>No review</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>